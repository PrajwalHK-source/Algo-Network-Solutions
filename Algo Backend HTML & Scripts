  <!-- Scripts: theme toggle, reveal-on-scroll, small token estimator, newsletter demo -->
  <script>
    // Utilities
    const $ = (s) => document.querySelector(s);
    const $$ = (s) => document.querySelectorAll(s);

    // Persisted theme: check localStorage first, else check OS preference
    (function initTheme(){
      const root = document.documentElement;
      const btn = document.getElementById('theme-toggle');
      const stored = localStorage.getItem('theme'); // 'light' or 'dark'
      if(stored){
        root.setAttribute('data-theme', stored);
        btn.setAttribute('aria-pressed', stored === 'light' ? 'true' : 'false');
      } else {
        // prefer light/dark based on system
        const prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
        if(prefersLight) root.setAttribute('data-theme', 'light');
      }

      btn.addEventListener('click', () => {
        const current = document.documentElement.getAttribute('data-theme') === 'light' ? 'light' : 'dark';
        const next = current === 'light' ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', next);
        localStorage.setItem('theme', next);
        btn.setAttribute('aria-pressed', next === 'light' ? 'true' : 'false');
      });
    })();

    // Reveal on scroll using IntersectionObserver
    (function revealOnScroll(){
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if(entry.isIntersecting){
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      }, {threshold: 0.12});
      document.querySelectorAll('.reveal').forEach((el, i) => {
        // optional staged delay via inline style variable --delay
        const delay = el.style.getPropertyValue('--delay') || (i * 40) + 'ms';
        el.style.transitionDelay = delay;
        observer.observe(el);
      });
    })();

    // Token estimator (very small approximation)
    document.getElementById('estimate-btn').addEventListener('click', () => {
      const txt = document.getElementById('token-input').value || '';
      const words = txt.trim() ? txt.trim().split(/\s+/).length : 0;
      const tokens = Math.max(0, Math.round(words * 1.33));
      const costPer1K = 0.02; // example placeholder $0.02 / 1k tokens
      const cost = (tokens / 1000 * costPer1K).toFixed(4);
      document.getElementById('token-output').textContent = `Tokens: ${tokens} • Approx. cost: $${cost}`;
    });

    // newsletter demo (non-functional stub)
    function subscribe(){
      const email = document.getElementById('email').value;
      if(!email) return alert('Please enter a valid email');
      // In production: POST to your newsletter API
      alert('Thanks! ' + email + ' — check your inbox (demo).');
      document.getElementById('newsletter-form').reset();
    }

    // small accessibility: set current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // keyboard shortcut: "t" toggles theme (small accessibility feature)
    window.addEventListener('keydown', (e) => {
      if(e.key.toLowerCase() === 't' && !e.ctrlKey && !e.metaKey && !e.altKey){
        document.getElementById('theme-toggle').click();
      }
    });
  </script>
